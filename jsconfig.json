{
  "compilerOptions": {
    "jsx": "react-jsx",  
    "baseUrl": "./",
    "paths": {
      "react/*": [
        "src/react/*"
      ],
      "react-dom/*": [
        "src/react-dom/*"
      ],
      "react-reconciler/*": [
        "src/react-reconciler/*"
      ],
      "scheduler/*": [
        "src/scheduler/*"
      ],
      "shared/*": [
        "src/shared/*"
      ],
      "react-dom-bindings/*": [
        "src/react-dom-bindings/*"
      ]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}